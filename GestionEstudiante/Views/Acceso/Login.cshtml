@model GestionEstudiante.Models.Usuario

@{
    Layout = null;
    ViewData["Title"] = "Acceso al Sistema";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #ffffff;
            height: 100vh;
            overflow: hidden; /* Evita scrollbars */
        }

        .login-container {
            height: 100vh;
        }

        /* --- COLUMNA IZQUIERDA (IMAGEN) --- */
        .bg-image {
            /* Imagen de fondo de una biblioteca moderna */
            background-image: url('https://images.unsplash.com/photo-1497633762265-9d179a990aa6?q=80&w=2073&auto=format&fit=crop');
            background-size: cover;
            background-position: center;
            position: relative;
        }

        /* Capa oscura sobre la imagen para que el texto resalte */
        .bg-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, rgba(13, 110, 253, 0.4), rgba(0, 0, 0, 0.8));
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            padding: 3rem;
            color: white;
        }

        /* --- COLUMNA DERECHA (FORMULARIO) --- */
        .login-form-section {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #ffffff;
            padding: 2rem;
        }

        .login-wrapper {
            width: 100%;
            max-width: 400px;
            animation: fadeInRight 0.8s ease-out;
        }

        /* Estilos de Inputs */
        .form-floating > .form-control {
            border-radius: 8px;
            border: 1px solid #dee2e6;
            height: calc(3.5rem + 2px);
        }

            .form-floating > .form-control:focus {
                border-color: #0d6efd;
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
            }

        .btn-login {
            border-radius: 8px;
            font-weight: 600;
            padding: 0.8rem;
            background: #0d6efd;
            border: none;
            transition: all 0.3s;
        }

            .btn-login:hover {
                background: #0b5ed7;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
            }

        .brand-logo {
            font-size: 2.5rem;
            color: #0d6efd;
            margin-bottom: 1rem;
        }

        /* Animación */
        @@keyframes fadeInRight {
            from {
                opacity: 0;
                transform: translateX(20px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        /* Nota los dos @@ aquí también */
        @@media (max-width: 768px) {
            .bg-image {
                display: none;
            }
        }
    </style>
</head>
<body>

    <div class="container-fluid login-container">
        <div class="row h-100">

            <div class="col-md-6 col-lg-7 bg-image px-0 d-none d-md-block">
                <div class="bg-overlay">
                    <h1 class="display-4 fw-bold mb-3">Gestión Académica</h1>
                    <p class="lead mb-4">Administra estudiantes, matriculas y reportes en una sola plataforma segura y eficiente.</p>
                   
                </div>
            </div>

            <div class="col-md-6 col-lg-5 login-form-section">
                <div class="login-wrapper">

                    <div class="text-start mb-5">
                        <i class="bi bi-mortarboard-fill brand-logo"></i>
                        <h2 class="fw-bold text-dark">Bienvenido de nuevo</h2>
                        <p class="text-muted">Por favor ingresa tus credenciales para continuar.</p>
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger d-flex align-items-center mb-4 border-0 shadow-sm" role="alert">
                            <i class="bi bi-exclamation-circle-fill me-2 fs-5"></i>
                            <div>@ViewBag.Error</div>
                        </div>
                    }

                    <form asp-action="Login" asp-controller="Acceso" method="post">

                        <div class="form-floating mb-3">
                            <input type="email" name="correo" class="form-control" id="floatingInput"
                                   placeholder="nombre@ejemplo.com" required autocomplete="username">
                            <label for="floatingInput">Correo Electrónico</label>
                        </div>

                        <div class="form-floating mb-4">
                            <input type="password" name="password" class="form-control" id="floatingPassword"
                                   placeholder="Contraseña" required autocomplete="current-password">
                            <label for="floatingPassword">Contraseña</label>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-login btn-lg">
                                Iniciar Sesión <i class="bi bi-arrow-right ms-2"></i>
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>