@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
@model IEnumerable<GestionEstudiante.Models.Estudiante>

@{
    ViewData["Title"] = "Portal Académico";
    var rol = Accessor.HttpContext?.Session.GetString("UsuarioRol");

    // Cálculos para las tarjetas de estadísticas
    var total = Model.Count();
    var activos = Model.Count(x => x.Estado);
    var inactivos = Model.Count(x => !x.Estado);
}

<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

<div class="app-container">

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="stat-card">
                <div class="icon-box bg-primary-soft text-primary">
                    <i class="bi bi-people-fill"></i>
                </div>
                <div>
                    <h6 class="text-muted text-uppercase mb-1">Total Estudiantes</h6>
                    <h3 class="fw-bold mb-0 text-dark">@total</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <div class="icon-box bg-success-soft text-success">
                    <i class="bi bi-check-lg"></i>
                </div>
                <div>
                    <h6 class="text-muted text-uppercase mb-1">Matrícula Activa</h6>
                    <h3 class="fw-bold mb-0 text-dark">@activos</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <div class="icon-box bg-danger-soft text-danger">
                    <i class="bi bi-pause-fill"></i>
                </div>
                <div>
                    <h6 class="text-muted text-uppercase mb-1">Suspendidos / Inactivos</h6>
                    <h3 class="fw-bold mb-0 text-dark">@inactivos</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="main-card">

        <div class="d-flex flex-wrap justify-content-between align-items-center p-4 border-bottom">
            <div>
                <h4 class="fw-bold mb-1">Directorio de Alumnos</h4>
                <p class="text-muted small mb-0">Gestiona la base de datos de la institución.</p>
            </div>

            <div class="d-flex gap-2">
                <form asp-action="Listado" method="get" class="search-form">
                    <i class="bi bi-search text-muted"></i>
                    <input type="text" name="Busqueda" class="form-control border-0 bg-transparent shadow-none"
                           placeholder="Buscar..." value="@ViewData["FiltroActual"]">
                </form>

               

                @if (rol == "Admin")
                {
                    <a asp-action="Crear" class="btn btn-primary fw-semibold px-4 d-flex align-items-center gap-2">
                        <i class="bi bi-plus-lg"></i> <span>Registrar</span>
                    </a>
                }
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 text-uppercase text-xs text-muted font-weight-bolder opacity-7">Perfil</th>
                        <th class="text-uppercase text-xs text-muted font-weight-bolder opacity-7">Información Personal</th>
                        <th class="text-uppercase text-xs text-muted font-weight-bolder opacity-7">Estado</th>
                        <th class="text-end pe-4 text-uppercase text-xs text-muted font-weight-bolder opacity-7">Gestión</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-gradient me-3 text-white">
                                        @item.Nombres.Substring(0, 1)
                                    </div>
                                    <div class="d-flex flex-column">
                                        <h6 class="mb-0 text-sm fw-bold text-dark">@item.Nombres @item.Apellidos</h6>
                                        <span class="text-xs text-muted">ID: #@item.IdEstudiante</span>
                                    </div>
                                </div>
                            </td>

                            <td>
                                <div class="d-flex flex-column">
                                    <span class="text-sm fw-semibold text-dark mb-1">
                                        <i class="bi bi-card-heading me-1 text-muted"></i> @item.DNI
                                    </span>
                                    <a href="mailto:@item.Correo" class="text-xs text-secondary text-decoration-none">
                                        @item.Correo
                                    </a>
                                </div>
                            </td>

                            <td>
                                @if (item.Estado)
                                {
                                    <span class="status-badge status-active">Activo</span>
                                }
                                else
                                {
                                    <span class="status-badge status-inactive">Inactivo</span>
                                }
                            </td>

                            <td class="pe-4 text-end">
                                @if (rol == "Admin")
                                {
                                    <a asp-action="Edit" asp-route-IdEstudiante="@item.IdEstudiante"
                                       class="action-btn text-primary me-2" title="Editar">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <button onclick="confirmarEliminar(@item.IdEstudiante)"
                                            class="action-btn text-danger" title="Eliminar">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>
                                }
                                else
                                {
                                    <span class="text-xs text-muted">Lectura</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <div class="mb-3 text-muted opacity-25">
                        <i class="bi bi-inbox-fill" style="font-size: 3rem;"></i>
                    </div>
                    <h6 class="text-muted">No se encontraron registros</h6>
                </div>
            }
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function confirmarEliminar(id) {
        Swal.fire({
            title: '¿Estás seguro?',
            text: "Se deshabilitará el acceso al estudiante.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#111827',
            cancelButtonColor: '#d1d5db',
            confirmButtonText: 'Sí, eliminar',
            cancelButtonText: 'Cancelar',
            customClass: { popup: 'rounded-4' }
        }).then((result) => {
            if (result.isConfirmed) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/Estudiante/DeleteConfirm';
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'IdEstudiante';
                input.value = id;
                form.appendChild(input);
                document.body.appendChild(form);
                form.submit();
            }
        })
    }
</script>

