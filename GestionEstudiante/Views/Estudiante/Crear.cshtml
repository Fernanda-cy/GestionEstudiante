@model GestionEstudiante.Models.Estudiante

@{
    ViewData["Title"] = "Nuevo Estudiante";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-success text-white py-3">
                    <h4 class="mb-0 text-center">
                        <i class="bi bi-person-plus-fill me-2"></i> Registrar Nuevo Estudiante
                    </h4>
                </div>
                
                <div class="card-body p-4">
                    <form asp-action="Crear">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Nombres" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-person"></i></span>
                                    <input asp-for="Nombres" class="form-control" placeholder="Ingrese nombres completos" />
                                </div>
                                <span asp-validation-for="Nombres" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="Apellidos" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-person-vcard"></i></span>
                                    <input asp-for="Apellidos" class="form-control" placeholder="Ingrese apellidos paterno y materno" />
                                </div>
                                <span asp-validation-for="Apellidos" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DNI" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-card-text"></i></span>
                                    <input asp-for="DNI" class="form-control" placeholder="8 dígitos" maxlength="8" />
                                </div>
                                <span asp-validation-for="DNI" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold d-block">Estado Inicial</label>
                                <div class="form-check form-switch mt-2">
                                    <input class="form-check-input" type="checkbox" asp-for="Estado" role="switch" id="estadoSwitch" checked>
                                    <label class="form-check-label text-muted" for="estadoSwitch">Activo por defecto</label>
                                </div>
                            </div>

                            <div class="col-md-12 mb-4">
                                <label asp-for="Correo" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-envelope-at"></i></span>
                                    <input asp-for="Correo" class="form-control" type="email" placeholder="ejemplo@correo.com" />
                                </div>
                                <span asp-validation-for="Correo" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end border-top pt-3">
                            <a asp-action="Listado" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success px-5 shadow-sm">
                                <i class="bi bi-check-lg"></i> Crear Registro
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="text-center mt-3">
                <small class="text-muted italic">Todos los campos son obligatorios para el registro.</small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    /* Efecto de foco en los inputs */
    .form-control:focus {
        border-color: #198754;
        box-shadow: 0 0 0 0.25rem rgba(25, 135, 84, 0.25);
    }
    
    .input-group-text {
        color: #6c757d;
    }

    .card {
        transition: transform 0.3s ease;
    }

    /* Animación sutil al cargar */
    .container {
        animation: fadeIn 0.5s ease-in-out;
    }

    @Html.Raw("@keyframes fadeIn { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }")
</style>
