@model GestionEstudiante.Models.Estudiante

@{
    ViewData["Title"] = "Editar Estudiante";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0 text-center">
                        <i class="bi bi-pencil-square me-2"></i> Actualizar Información
                    </h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="IdEstudiante" />

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Nombres" class="form-label fw-bold text-muted"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light text-primary"><i class="bi bi-person"></i></span>
                                    <input asp-for="Nombres" class="form-control" placeholder="Nombre completo" />
                                </div>
                                <span asp-validation-for="Nombres" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="Apellidos" class="form-label fw-bold text-muted"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light text-primary"><i class="bi bi-person-vcard"></i></span>
                                    <input asp-for="Apellidos" class="form-control" placeholder="Apellidos" />
                                </div>
                                <span asp-validation-for="Apellidos" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DNI" class="form-label fw-bold text-muted"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light text-primary"><i class="bi bi-card-text"></i></span>
                                    <input asp-for="DNI" class="form-control" maxlength="8" />
                                </div>
                                <span asp-validation-for="DNI" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="Correo" class="form-label fw-bold text-muted"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light text-primary"><i class="bi bi-envelope-at"></i></span>
                                    <input asp-for="Correo" class="form-control" type="email" />
                                </div>
                                <span asp-validation-for="Correo" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold text-muted d-block">Estado del Alumno</label>
                                <div class="form-check form-switch mt-2">
                                    <input class="form-check-input" type="checkbox" asp-for="Estado" role="switch" id="estadoEditSwitch"> 
                                    <label class="form-check-label text-dark" for="estadoEditSwitch">
                                        <br /> Activo / Inactivo
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end border-top pt-3">
                            <a asp-action="Listado" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary px-5 shadow-sm">
                                <i class="bi bi-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <p class="text-muted small">ID de Estudiante: #@Model.IdEstudiante</p>
            </div>
        </div>
    </div>
</div>

<style>
    /* Estilos personalizados para consistencia visual */
    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
    }

    .card {
        transition: all 0.3s ease;
    }

    .form-switch .form-check-input {
        width: 3em;
        height: 1.5em;
        cursor: pointer;
    }

    .input-group-text {
        border-right: none;
    }

    .form-control {
        border-left: none;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


